# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=behance_crawler

# Redis
REDIS_URL=redis://localhost:6379/0

# Proxies
PROXY_PROVIDER=brightdata  # or oxylabs, smartproxy
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_HOST=
PROXY_PORT=

# Captcha Solver
CAPTCHA_SOLVER_API_KEY=
CAPTCHA_SOLVER_PROVIDER=2captcha  # or anticaptcha

# Behance Accounts (comma-separated)
BEHANCE_ACCOUNTS=email1:password1,email2:password2

# Crawler Settings
MAX_CONCURRENT_SESSIONS=5
REQUESTS_PER_MINUTE=10
SESSION_WARMUP_DURATION=300  # seconds
